<?xml version="1.0" encoding="UTF-8"?>
 <ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 updateCheck="false"
           xsi:noNamespaceSchemaLocation="ehcache.xsd" name="yourCacheManager">

         <diskStore path="java.io.tmpdir"/>

         <cache name="my.spring.security.entity.Article" maxElementsInMemory="10000" eternal="false" overflowToDisk="false" timeToLiveSeconds="86400" />
         <cache name="category" maxElementsInMemory="10000" eternal="false" overflowToDisk="false" timeToLiveSeconds="86400" />

         <cache name="org.hibernate.cache.internal.StandardQueryCache" maxElementsInMemory="10000" eternal="false" timeToLiveSeconds="86400" overflowToDisk="false" memoryStoreEvictionPolicy="LRU" />

      <defaultCache
              maxElementsInMemory="10000"
              eternal="false"
              timeToLiveSeconds="86400"
              overflowToDisk="false"
              memoryStoreEvictionPolicy="LRU" />
              
      <cache name="query.category.getCategoriesOrderByPosition" maxElementsInMemory="10000" maxEntriesLocalHeap="10" eternal="false" timeToLiveSeconds="86400"/>
    </ehcache>
